{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "ES2015"
    ]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "specs/**/*.spec.ts"
  ]
}
